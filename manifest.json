{
  "manifest_version" : 2,
  "name" : "WEBTAG",
  "description" : "View and draw art on the web",
  "version" : "1.0",
  "permissions" : [
    "http://*/*",
    "https://*/*"
  ],
  "browser_action" : {
    "default_icon" : "img/Angry.png",
    "default_popup" : "popup.html"
  },
  "icons" : {
    "128" : "img/Angry.png"
  },
  "content_scripts" : [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["./js/tag_the_web.js"]
  }]
}
